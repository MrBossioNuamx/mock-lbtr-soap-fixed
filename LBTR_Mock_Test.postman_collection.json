		{
			"name": "3. Transferencia - Instruir Cavali",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "text/xml"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\" xmlns:tns=\"http://lbtr.bcrp.gob.pe\">\n   <soapenv:Header/>\n   <soapenv:Body>\n      <tns:instruirTransferenciaCavali>\n         <sid>{{sessionId}}</sid>\n         <datosTransferencia>\n            <codConcepto>CCI</codConcepto>\n            <cuentaDestino>987654321</cuentaDestino>\n            <cuentaOrigen>123456789</cuentaOrigen>\n            <datosCliente>Cliente de Prueba</datosCliente>\n            <fechaLiquidacion>2024-05-22T14:00:00.000-05:00</fechaLiquidacion>\n            <instruccionesPago>Pago por servicio</instruccionesPago>\n            <montoOperacion>123.45</montoOperacion>\n            <numRefOrigen>REF-ORIGEN-001</numRefOrigen>\n            <prioridad>1</prioridad>\n         </datosTransferencia>\n         <datosCavali>\n            <codigoSAB>SAB01</codigoSAB>\n            <cuentaInterbancariaSAB>001987654321</cuentaInterbancariaSAB>\n            <fechaNegociacionCavali>2024-05-22T13:30:00.000-05:00</fechaNegociacionCavali>\n            <numRefCavali>CAV-REF-001</numRefCavali>\n            <tipoParticipanteCavali>PARTICIPANTE</tipoParticipanteCavali>\n         </datosCavali>\n         <firma>firma1</firma>\n      </tns:instruirTransferenciaCavali>\n   </soapenv:Body>\n</soapenv:Envelope>"
				},
