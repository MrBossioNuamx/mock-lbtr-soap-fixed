	"item": [
		{
			"name": "1. Auth - Logon",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"try {",
							"    var response = xml2Json(pm.response.text());",
							"    var sessionId = response[\"soap:Envelope\"][\"soap:Body\"][\"ns2:logonResponse\"][\"sid\"];",
							"    if (sessionId) {",
							"        pm.collectionVariables.set(\"sessionId\", sessionId);",
							"        console.log(\"Session ID set to: \" + sessionId);",
							"    } else {",
							"        console.error(\"Could not find session ID in response.\");",
							"    }",
							"} catch (e) {",
							"    console.error(\"Error parsing SOAP response: \" + e);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "text/xml"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\" xmlns:tns=\"http://lbtr.bcrp.gob.pe\">\n   <soapenv:Header/>\n   <soapenv:Body>\n      <tns:logon>\n         <codigo>user1</codigo>\n         <password>pass123</password>\n         <ksim>ksim1</ksim>\n         <firma>firma1</firma>\n      </tns:logon>\n   </soapenv:Body>\n</soapenv:Envelope>"
				},
				"url": {
					"raw": "http://localhost:8090/soap/auth",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8090",
					"path": [
						"soap",
						"auth"
					]
				},
				"description": "Authenticates a user and retrieves a session ID."
			},
			"response": []
		},
